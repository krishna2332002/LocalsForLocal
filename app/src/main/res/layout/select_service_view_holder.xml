<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:background="@drawable/white_recommended_btn"
    android:elevation="4dp"
    android:layout_margin="6dp"
    android:padding="2dp">

    <ImageView
        android:id="@+id/selectServicePic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile" />

    <TextView
        android:id="@+id/selectServiceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Service"
        android:textColor="#161313"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/selectServicePic"
        app:layout_constraintStart_toStartOf="@+id/selectServicePic"
        app:layout_constraintTop_toBottomOf="@+id/selectServicePic" />

    <TextView
        android:id="@+id/serviceProvidersText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Servicer In Your area:"
        android:textColor="#161313"
        android:textSize="14dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectServiceTitle" />

    <TextView
        android:id="@+id/serviceProvidersNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="01"
        android:textColor="#161313"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/serviceProvidersText"
        app:layout_constraintTop_toBottomOf="@+id/selectServiceTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>