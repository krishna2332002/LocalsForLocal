<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CreateServiceProviderAccount">
    <ImageView
        android:id="@+id/selectServicePic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile" />
    <TextView
        android:id="@+id/selectServiceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Service"
        android:textColor="#161313"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/selectServicePic"
        app:layout_constraintStart_toStartOf="@+id/selectServicePic"
        app:layout_constraintTop_toBottomOf="@+id/selectServicePic" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:elevation="200dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="50dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selectServiceTitle">

        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal"
            android:orientation="vertical">

            <EditText
                android:id="@+id/userExperience"
                android:layout_width="309dp"
                android:layout_height="48dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="25dp"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Years Of Experience"
                android:inputType="number"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/userDescription"
                android:layout_width="309dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Description"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/userAlternativePhone"
                android:layout_width="310dp"
                android:layout_height="40dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Alternative Phone number"
                android:inputType="number"
                android:paddingStart="10dp"
                tools:ignore="RtlSymmetry" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/update_btn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_margin="40dp"
        android:background="@drawable/yellow_background"
        android:drawablePadding="5dp"
        android:elevation="8dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="Submit"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>